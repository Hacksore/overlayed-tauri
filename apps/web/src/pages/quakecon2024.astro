---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/footer.astro";

import discordOgImage from "../assets/blog/discord.png";
import Link from "../components/link.astro";
---

<style>
  /* TODO: move this to a shared layout?*/
  .main-content {
    margin: auto;
    width: 800px;
    max-width: calc(100% - 2rem);
  }
</style>

<Layout
  title={"Overlayed - Discord"}
  description="Join our Discord server to get help, report bugs, or just chat with the community."
  ogImage={discordOgImage.src}
>
  <main class="main-content px-8 pt-28">
    <section>
      <div class="flex flex-col text-center">
        <div
          class="flex m-auto gap-2 flex-col text-[2.5rem] items-center justify-center"
        >
          <img class="mb-8" src="/img/quakecon-logo.png" />
          <p class="mb-12 font-bold text-[4rem]">👋 Gamers in the chat 🕹️</p>
          <p class="text-zinc-400 font-bold">
            Overlayed gives you a movable overlay for Discord voice chat.
          </p>
          <p class="text-zinc-400 font-bold">
            See the <Link to="/about" title="about page" underline>
              about page
            </Link> to learn more.
          </p>

          <p class="text-zinc-400 mt-12 font-bold">
            🎁 Don't forget to join the <Link
              to="/discord"
              title="Discord server"
              underline
            >
              Discord
            </Link> to learn about the giveaway!
          </p>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
